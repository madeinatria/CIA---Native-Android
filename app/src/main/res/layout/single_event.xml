<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:padding="5dp"
        android:layout_gravity="center_vertical"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_reunion"/>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/eventtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Titlek "
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/eventshortdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="sdbvivifdibviufbudivbufdbuvbfduvfdubvdfvdfvfdvvfdbvfdvdfvfdvfdvdfv" />

        <TextView
            android:textColor="@color/black"
            android:paddingLeft="5dp"
            android:layout_marginTop="2dp"
            android:textSize="18dp"
            android:id="@+id/eventtimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:30 Thur 23/09/18"
            android:textStyle="bold"/>






    </LinearLayout>
</LinearLayout>


</androidx.cardview.widget.CardView>